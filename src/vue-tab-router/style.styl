.tab-router-container
	display flex
	flex-direction column
.router-view
	height 100px
	flex-grow 1
	padding 0 10px
	overflow auto
.tab-list
	display flex
	padding 10px 15px 0
	background #f0f2f4
	.tab-item
		position relative
		min-width 80px
		height 30px
		padding 0 10px
		border-radius 4px 4px 0 0
		line-height 30px
		color #333
		font-size 12px
		.tab-body
			margin-right 20px
		.tab-close
			position absolute
			top 0
			right 0
			width 30px
			height 30px
			text-align center
			font bold 20px/30px "simsun"
			color #aaa
			transition .2s ease-in-out
			&:hover
				color #333
		&:hover
			background #f9fafa
		&.active
			background #fff

.tab-router-link
	cursor pointer